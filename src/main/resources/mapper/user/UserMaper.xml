<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="easy.lilm.p.dao.user.UserDao">

    <resultMap id="UserResult" type="easy.lilm.p.entity.user.User">
        <id column="user_id" property="userId" jdbcType="VARCHAR" />
        <result column="username" property="username" jdbcType="VARCHAR" />
    </resultMap >

    <select id="findById" parameterType="String" resultMap="UserResult">
        SELECT user_id, username FROM user WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="easy.lilm.p.entity.user.User">
        insert into user values (#{userId}, #{username})
    </insert>

</mapper>